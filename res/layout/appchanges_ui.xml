<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp" >

        <Switch
            android:id="@+id/chkEnabled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enabled"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <CheckBox
            android:id="@+id/chkNav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translucent Nav Bar" />

        <CheckBox
            android:id="@+id/chkStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Translucent Status Bar" />

        <TextView
            android:id="@+id/textViewT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Padding"
            android:textAppearance="?android:attr/textAppearance" />

        <NumberPicker
            android:id="@+id/npTop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
        </NumberPicker>

        <TextView
            android:id="@+id/textViewB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bottom Padding"
            android:textAppearance="?android:attr/textAppearance" />

        <NumberPicker
            android:id="@+id/npBottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</ScrollView>